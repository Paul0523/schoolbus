<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Hibernate方言 -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<!-- 显示sql语句 -->
		<property name="show_sql">false</property>
		<!-- 映射文件 -->
		<mapping resource="com/schoolbus/entity/User.hbm.xml" />
		<mapping resource="com/schoolbus/entity/Bus.hbm.xml" />
		<mapping resource="com/schoolbus/entity/Line.hbm.xml" />
		<mapping resource="com/schoolbus/entity/Station.hbm.xml" />
		<mapping resource="com/schoolbus/entity/LineStations.hbm.xml" />
		<mapping resource="com/schoolbus/entity/LineInfo.hbm.xml" />
	</session-factory>
</hibernate-configuration>